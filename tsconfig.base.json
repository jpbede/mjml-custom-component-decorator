{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "incremental": false,
    "inlineSources": true,
    "inlineSourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "types": [
      "node",
      "jest"
    ]
  },
  "exclude": [
    "test/**",
    "examples/**"
  ]
}
