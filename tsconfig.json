{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "incremental": false,
    "target": "es2015",
    "module": "commonjs",
    "inlineSources": true,
    "inlineSourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "types": [
      "node",
      "jest"
    ]
  },
  "include": [
    "src",
    "test"
  ]
}
